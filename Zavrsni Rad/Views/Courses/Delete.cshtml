@model Zavrsni_Rad.Models.Course

@{
    ViewBag.Title = "Obrisati";
}

<h2>Obrisati kolegij</h2>

<h3>Da li ste sigurni da želite obrisati?</h3>
<div>
    @*<h4>Course</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseAbbreviation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseAbbreviation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LecturerPerson.LecturerID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LecturerPerson.Title)
            @Html.DisplayFor(model => model.LecturerPerson.Name)
            @Html.DisplayFor(model => model.LecturerPerson.Surname)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obrisati" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na listu kolegija", "Index")
        </div>
    }
</div>
