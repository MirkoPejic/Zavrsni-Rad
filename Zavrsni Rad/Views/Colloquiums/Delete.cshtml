@model Zavrsni_Rad.Models.Colloquium

@{
    ViewBag.Title = "Obrisati";
}

<h2>Brisanje kolokvija</h2>

<h3>Da li ste sigurni da želite obrisati?</h3>
<div>
    @*<h4>Kolokvij</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ColloquiumDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColloquiumDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ColloquiumStart)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColloquiumStart)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ColloquiumText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColloquiumText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LecturerPerson.LecturerID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LecturerPerson.Title)
            @Html.DisplayFor(model => model.LecturerPerson.Name)
            @Html.DisplayFor(model => model.LecturerPerson.Surname)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obrisati" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na listu kolokvija", "Index")
        </div>
    }
</div>
