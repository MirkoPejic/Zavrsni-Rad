@model Zavrsni_Rad.Models.Lectures

@{
    ViewBag.Title = "Urediti";
}

<h2>Uredite predavanje</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Lectures</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LecturesID)

        <div class="form-group">
            @Html.LabelFor(model => model.LecturerID, "Predavač", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LecturerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LecturerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseID, "Kolegij", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CourseID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LectureDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LectureDate, new { htmlAttributes = new { @class = "form-control", id = "date-picker2" } })
                @Html.ValidationMessageFor(model => model.LectureDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LectureStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LectureStart, new { htmlAttributes = new { @class = "form-control", id = "time-picker3" } })
                @Html.ValidationMessageFor(model => model.LectureStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LectureEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LectureEnd, new { htmlAttributes = new { @class = "form-control", id = "time-picker4" } })
                @Html.ValidationMessageFor(model => model.LectureEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LectureText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LectureText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LectureText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremiti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na listu predavanja", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#date-picker2').datepicker({
            dateFormat: 'yy-mm-dd'

        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#time-picker3').timepicker({
            timeFormat: 'HH:mm',
            interval: 15,
            //minTime: '10',
            //maxTime: '6:00pm',
            defaultTime: '8',
            startTime: '8:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#time-picker4').timepicker({
            timeFormat: 'HH:mm',
            interval: 15,
            //minTime: '10',
            //maxTime: '6:00pm',
            defaultTime: '9',
            startTime: '8:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    });
</script>

